<h1>Create a new listing</h1>
<p>Find me in app/views/listings/new.html.erb</p>

<div class ="col-6">
<div class="card">
  <div class="card-header">
    Add a Listing
  </div>
  <div class="card-body">
  	<%= form_with scope: :listing, url: listings_path, local: true do |form| %>
		    <form>
		  <div class="form-group">
		    <label for="title">Headline</label>
		    <%= form.text_field :"title", placeholder: "Headline", class:"form-control" %>
		  </div>

		  <div class="form-group">
		    <label for="description">Description</label>
		  	<%= form.text_area :description, placeholder: "Tell everyone about your place", class:"form-control", rows:"3" %>
		  </div>

		  <div class="form-group">
		    <%= form.text_field :price_night, placeholder: "Price per night", class:"form-control" %>
		  </div>

		<div class="row">
			    <div class="col">
			       <div class="form-group">
						<%= select_tag(:property_type, options_for_select([ ['Type of Property', ""], 
							['Entire House', "Entire House"],
							['Entire Apartment', "Entire Apartment"], 
							['Private Room', "Private Room"], 
							['Shared Room', "Shared Room"], 
							['Hotel Room', "Hotel Room"],
							['Other', "Other"]] ), {:class => 'form-control'})  %>
					</div>
			    </div>
			    <div class="col">
			    	<div class="form-group">
			     		<%= form.text_field :beds, placeholder: "Beds", class:"form-control"%>
			     	</div>
			    </div>
			     <div class="col">
			     	<div class="form-group">
			     		<%= form.text_field :max_guests, placeholder: "Guests", class:"form-control"%>
			     	</div>
			    </div>
		</div>	



		<div class="form-group">
		    <label for="address">Address</label>
		  	<%= form.text_area :address, placeholder: "Address", class:"form-control", rows:"2" %>
		 </div>

		<div class="row">
			    <div class="col">
			    	<div class="form-group">
			      		<%= form.text_field :city, placeholder: "City", class:"form-control"%>
			  		</div>
			    </div>
			    <div class="col">
			    	<div class="form-group">
			     		<%= form.text_field :country, placeholder: "Country", class:"form-control"%>
			     	</div>
			    </div>
		</div>

		<div class="form-group">
			<%= form.file_field :images, multiple: true, class:"form-control"%>
		</div>



		  <div>
		  	<%= form.submit %>
		  </div>
		</form>
		<% end %>
  </div>
</div>