


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">


   <% @listing_imgs.each_with_index do |listing, index| %>
   <div class="carousel-item <%= index == 0  ? "active" : "" %>">
     <%= image_tag listing.url.to_s, class:"d-block w-100 image-fit"%>
   </div>
   <% end %>


 </div>
 <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>


<h3 class="blue"><%= "#{@listing.title}"%></h3>

<p><strong><%= "#{@listing.price_night} MYR"%></strong> per night</p>

<p><%= "#{@listing.description}"%></p>
<p><%= "#{@listing.property_type}, Beds: #{@listing.beds}, Maximum Guests: #{@listing.max_guests}"%></p>

<p><%= "#{@listing.city}, #{@listing.country}"%></p>

<p><%= "Hosted by #{@listing.user.first_name}"%></p>






<%= form_with scope: :reservation, url: listing_reservations_path(@listing.id), local: true do |form| %>
<form>
  <div class="input-group date form-group">
    <%= form.text_field :checkin, placeholder:"Check-In", class:"form-control col-2" %><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
  </div>
  <div class="input-group date form-group">
    <%= form.text_field :checkout, placeholder:"Check-Out", class:"form-control col-2" %><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
  </div>




  <div class = "form-group">
    <%= form.submit %>
  </div>
</form>

Total Price for 5 nights:
100MYR

<% end -%>


